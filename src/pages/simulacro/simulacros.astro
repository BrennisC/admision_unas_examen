---

<Layout title="Simulacros">
  <ul>
    {
      simulacros.map((simulacro) => (
        <li>
          <a href={simulacro.url}>{simulacro.title}</a>
          <p>{simulacro.description}</p>
        </li>
      ))
    }
  </ul>
</Layout>
